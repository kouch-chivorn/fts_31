<ol start=<%= @i=@i+1 %>>
  <li>
    <p><b><%= f.object.question.content %></b></p>

    <% f.object.question.answers.each do |answer| %>
      <p>
        <span class="col-md-1">
          <%= f.radio_button :answer_id, answer.id,
            disabled: params[:action] == "show" ? true : false %>
        </span>
        <span>
          <%= answer.content %>
        </span>
      </p>
    <% end %>
  </li>
</ol>
<br>