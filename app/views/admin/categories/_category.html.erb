<tr>
  <td><%= category.id %></td>
  <td><%= link_to category.name, admin_category_path(category) %></td>
  <td><%= link_to shorten(category.description.to_s) , admin_category_path(category) %></td>
  <td><%= category.duration %></td>
  <td>
    <%= link_to "Edit", edit_admin_category_path(category), 
    class:"btn btn-medium btn-success"  %>
    <%= link_to "Delete", admin_category_path(category), 
      data: {method: :delete, confirm: I18n.t("category.message.you_sure")},
      class:"btn btn-medium btn-danger" %>
  </td>
</tr>
