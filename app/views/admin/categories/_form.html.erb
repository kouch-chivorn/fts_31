<%= form_for [:admin, @category], class: "form" do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :duration,"Duration in minutes" %>
    <%= f.text_field :duration %>
  </div>
  
  <div class="field">
    <%= f.submit @category.new_record? ? "Create" : "Update", class: "btn btn-large btn-primary" %>
  </div>
<% end %>
